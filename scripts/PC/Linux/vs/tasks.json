{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "(PC:Linux/g++): Build and run",
            "type": "shell",
            "command": "python3 crossplay.py run PC:Linux",
            "problemMatcher": ["$gcc"],
            "options": {
                "cwd": "${workspaceFolder}"
            },

            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        
        {
            "label": "(PC:Linux/g++): Build",
            "type": "shell",
            "command": "python3 crossplay.py run PC:Linux --build-only",
            "problemMatcher": ["$gcc"],
            "options": {
                "cwd": "${workspaceFolder}"
            },

            "group": "build"
        }
    ]
}