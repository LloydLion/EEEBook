{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "(MCU:ESP32/pio): Build and upload",
            "type": "shell",
            "command": "python crossplay.py run MCU:ESP32",
            "problemMatcher": ["$gcc"],
            "options": {
                "cwd": "${workspaceFolder}"
            },

            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        
        {
            "label": "(MCU:ESP32/pio): Build",
            "type": "shell",
            "command": "python crossplay.py run MCU:ESP32 --build-only",
            "problemMatcher": ["$gcc"],
            "options": {
                "cwd": "${workspaceFolder}"
            },

            "group": "build"
        }
    ]
}